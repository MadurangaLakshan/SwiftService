{
  "expo": {
    "name": "SwiftService",
    "slug": "SwiftService",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/SwiftService.png",
    "scheme": "swiftservice",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "config": {
        "googleMapsApiKey": "AIzaSyDPJmFKCv8xanY7qsstjf9SJYOjZJkfU_k"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "SwiftService needs your location to find nearby service providers and show accurate distances.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "SwiftService needs your location to find nearby service providers and show accurate distances."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/SwiftService.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      },
      "package": "com.anonymous.SwiftService"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/SwiftService.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/SwiftService.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow SwiftService to use your location to find nearby service providers."
        }
      ],
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.yourapp.identifier",
          "enableGooglePay": false
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
